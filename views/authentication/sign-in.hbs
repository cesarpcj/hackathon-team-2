<form action="/authentication/sign-in" method="POST">
  <div class="form-group">
    <label for="input-email">Email address</label>
    <input required type="email" id="input-email" name="email" class="form-control"/>
  </div>
  <div class="form-group">
    <label for="input-password">Password</label>
    <input required type="password" name="password" id="input-password" class="form-control"/>
  </div>
  <button class="btn btn-primary">Log in</button>
  <small class="form-text text-muted">New to Artgeo? <a href="/authentication/sign-up">Sign up</a></small>
</form>